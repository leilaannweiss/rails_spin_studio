<h2>All Spin Classes</h2>
<h4>Click to join a class:</h4>
<ul class="list-group">
  <% @spin_classes.each do |spin_class| %>
    <li class="list-group-item"><%= spin_class.name %>
      <%= link_to "Join", new_spin_class_reservation_path(spin_class) %></br>
      Number of Attendees: <%= spin_class.attendees %>
    </li>
  <% end %>
</ul>
<%= link_to "Add New Spin Class", new_spin_class_path %>
