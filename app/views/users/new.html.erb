<div class="container">
  <h2>Create Your Spin Class Membership!</h2>
  <br>

  <%= form_for @user do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, autofocus: true %>
    </div>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>
    <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, required: true %>
    </div>

    <%= f.submit "Create account!", class: "btn btn-primary" %>
  <% end %>
</div>
