<div class="container">
  <h2>Welcome back to SpinSpin!</h2>
  <br>

  <%= form_for :signin do |f| %>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.text_field :email, autofocus: true %>
    </div>
    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <%= f.submit "Login", class: "btn btn-primary btn-sm"%>
  <% end %>
</div>
